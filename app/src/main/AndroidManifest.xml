<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="filemanager.fileexplorer"
    android:installLocation="auto">


    <uses-permission android:name="android.permission.MANAGE_DOCUMENT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.ACCESS_SUPERUSER" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.usb.host"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.wifi"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.type.pc"
        android:required="false" />

    <application
        android:name="filemanager.fileexplorer.DocumentsApplication"
        android:allowBackup="true"
        android:banner="@mipmap/ic_launcher"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        tools:replace="android:label"
        tools:ignore="UnusedAttribute">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id"/>

        <meta-data
            android:name="WindowManagerPreference:FreeformWindowSize"
            android:value="[phone|tablet|maximize]" />
        <meta-data
            android:name="WindowManagerPreference:FreeformWindowOrientation"
            android:value="[portrait|landscape]" />

        <meta-data
            android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
            android:value="filemanager.fileexplorer.cast.CastOptionsProvider" />

        <!-- TODO: allow rotation when state saving is in better shape -->
        <activity
            android:name="filemanager.fileexplorer.DocumentsActivity"
            android:launchMode="singleTask"
            android:theme="@style/DocumentsTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.OPEN_DOCUMENT" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.OPENABLE" />

                <data android:mimeType="*/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.CREATE_DOCUMENT" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.OPENABLE" />

                <data android:mimeType="*/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.GET_CONTENT" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.OPENABLE" />

                <data android:mimeType="*/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.provider.action.MANAGE_ROOT" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.document/root" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.OPEN_DOCUMENT_TREE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- For Phones and tablets -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


            <!-- For Quick Setting Tiles -->
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE_PREFERENCES" />
            </intent-filter>
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />

            <intent-filter>
                <data android:scheme="${applicationId}" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>

            <meta-data
                android:name="WindowManagerPreference:SuppressWindowControlNavigationButton"
                android:value="true" />
        </activity>
        <activity
            android:name="filemanager.fileexplorer.StandaloneActivity"
            android:theme="@style/DocumentsTheme.Document">
            <meta-data
                android:name="WindowManagerPreference:SuppressWindowControlNavigationButton"
                android:value="true" />
        </activity>


        <activity
            android:name="filemanager.fileexplorer.setting.SettingsActivity"
            android:exported="false"
            android:label="@string/menu_settings"
            android:theme="@style/DocumentsTheme.Setting">
            <meta-data
                android:name="WindowManagerPreference:SuppressWindowControlNavigationButton"
                android:value="true" />
        </activity>

        <receiver android:name="filemanager.fileexplorer.receiver.PackageReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_FULLY_REMOVED" />
                <action android:name="android.intent.action.PACKAGE_DATA_CLEARED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>
        <receiver android:name="filemanager.fileexplorer.receiver.MountReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_MOUNTED" />
                <action android:name="android.intent.action.MEDIA_UNMOUNTED" />

                <data android:scheme="file" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.os.storage.action.VOLUME_STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="filemanager.fileexplorer.NoteActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="sensor"
            android:theme="@style/DocumentsTheme.Note">
            <intent-filter
                android:label="Text Viewer"
                tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/*" />
            </intent-filter>
            <meta-data
                android:name="WindowManagerPreference:SuppressWindowControlNavigationButton"
                android:value="true" />
        </activity>

        <receiver
            android:name="filemanager.fileexplorer.receiver.ConnectionsReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="${applicationId}.action.START_FTPSERVER" />
                <action android:name="${applicationId}.action.STOP_FTPSERVER" />
                <action android:name="${applicationId}.action.FTPSERVER_STARTED" />
                <action android:name="${applicationId}.action.FTPSERVER_STOPPED" />
                <action android:name="${applicationId}.action.START_LISTENING" />
                <action android:name="${applicationId}.action.STOP_LISTENING" />
            </intent-filter>
        </receiver>

        <service
            android:name="filemanager.fileexplorer.service.ConnectionsService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="filemanager.fileexplorer.service.ServerTileService"
            android:icon="@drawable/ic_root_server"
            android:label="@string/toggle_messages"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <service
            android:name="filemanager.fileexplorer.service.TransferTileService"
            android:icon="@drawable/ic_root_transfer"
            android:label="@string/transfer_toggle_messages"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <provider
            android:name="filemanager.fileexplorer.provider.ContentProvider"
            android:authorities="${applicationId}.roots"
            android:enabled="true"
            android:exported="false" />

        <provider
            android:name="filemanager.fileexplorer.provider.RecentsProvider"
            android:authorities="${applicationId}.recents"
            android:exported="true"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENT">
            <intent-filter>
                <action android:name="filemanager.fileexplorer.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>
        <provider
            android:name="filemanager.fileexplorer.provider.ExternalStorageProvider"
            android:authorities="${applicationId}.externalstorage.documents"
            android:exported="true"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENT">
            <intent-filter>
                <action android:name="filemanager.fileexplorer.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>
        <provider
            android:name="filemanager.fileexplorer.provider.MediaDocumentsProvider"
            android:authorities="${applicationId}.media.documents"
            android:exported="true"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENT">
            <intent-filter>
                <action android:name="filemanager.fileexplorer.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>
        <provider
            android:name="filemanager.fileexplorer.provider.NonMediaDocumentsProvider"
            android:authorities="${applicationId}.nonmedia.documents"
            android:exported="true"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENT">
            <intent-filter>
                <action android:name="filemanager.fileexplorer.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>
        <provider
            android:name="filemanager.fileexplorer.provider.AppsProvider"
            android:authorities="${applicationId}.apps.documents"
            android:exported="true"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENT">
            <intent-filter>
                <action android:name="filemanager.fileexplorer.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>
        <provider
            android:name="filemanager.fileexplorer.provider.RootedStorageProvider"
            android:authorities="${applicationId}.rootedstorage.documents"
            android:exported="true"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENT">
            <intent-filter>
                <action android:name="filemanager.fileexplorer.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>

        <provider
            android:name="filemanager.fileexplorer.provider.HeatMapProvider"
            android:authorities="${applicationId}.heatmap.documents"
            android:enabled="false"
            android:exported="false"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENT">
            <intent-filter>
                <action android:name="filemanager.fileexplorer.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>
        <provider
            android:name="filemanager.fileexplorer.provider.DownloadStorageProvider"
            android:authorities="${applicationId}.downloads.documents"
            android:enabled="false"
            android:exported="false"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENT">
            <intent-filter>
                <action android:name="filemanager.fileexplorer.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>

        <provider
            android:name="filemanager.fileexplorer.provider.ExplorerProvider"
            android:authorities="${applicationId}.explorer"
            android:enabled="true"
            android:exported="false" />

        <provider
            android:name="filemanager.fileexplorer.provider.UsbStorageProvider"
            android:authorities="${applicationId}.usbstorage.documents"
            android:exported="true"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENT">
            <intent-filter>
                <action android:name="filemanager.fileexplorer.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>

        <provider
            android:name="filemanager.fileexplorer.provider.NetworkStorageProvider"
            android:authorities="${applicationId}.networkstorage.documents"
            android:exported="true"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENT">
            <intent-filter>
                <action android:name="filemanager.fileexplorer.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>

        <provider
            android:name="filemanager.fileexplorer.provider.CloudStorageProvider"
            android:authorities="${applicationId}.cloudstorage.documents"
            android:exported="true"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENT">
            <intent-filter>
                <action android:name="filemanager.fileexplorer.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>

        <provider
            android:name="filemanager.fileexplorer.provider.ExtraDocumentsProvider"
            android:authorities="${applicationId}.extra.documents"
            android:exported="true"
            android:grantUriPermissions="true"
            android:permission="android.permission.MANAGE_DOCUMENT">
            <intent-filter>
                <action android:name="filemanager.fileexplorer.action.DOCUMENTS_PROVIDER" />
            </intent-filter>
        </provider>

        <activity
            android:name="filemanager.fileexplorer.common.WebviewActivity"
            android:enabled="true"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/DocumentsTheme.Document">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="integrations.cloudrail.com"
                    android:scheme="https" />
            </intent-filter>
            <meta-data
                android:name="WindowManagerPreference:SuppressWindowControlNavigationButton"
                android:value="true" />
        </activity>

        <activity
            android:name="filemanager.fileexplorer.cast.ExpandedControlsActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/DocumentsTheme.Cast">
            <meta-data
                android:name="WindowManagerPreference:SuppressWindowControlNavigationButton"
                android:value="true" />
        </activity>

        <activity
            android:name="filemanager.fileexplorer.ShareDeviceActivity"
            android:label="@string/activity_share"
            android:theme="@style/DocumentsTheme.Note">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SEND_MULTIPLE" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="*/*" />
            </intent-filter>
            <meta-data
                android:name="WindowManagerPreference:SuppressWindowControlNavigationButton"
                android:value="true" />
        </activity>

        <service
            android:name="filemanager.fileexplorer.service.TransferService"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>